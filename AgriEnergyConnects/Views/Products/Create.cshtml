@model AgriEnergyConnects.Models.Product

@{
    ViewData["Title"] = "Create Product";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-gold text-dark">
            <h3 class="mb-0">🛠️ Create Product</h3>
        </div>
        <div class="card-body bg-white text-dark">
            <partial name="_ValidationScriptsPartial" />

            <form asp-action="Create" method="post">
                <div asp-validation-summary="All" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label asp-for="Name" class="form-label fw-semibold"></label>
                    <input asp-for="Name" class="form-control bg-light text-dark" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Category" class="form-label fw-semibold"></label>
                    <input asp-for="Category" class="form-control bg-light text-dark" />
                    <span asp-validation-for="Category" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ProductionDate" class="form-label fw-semibold"></label>
                    <input asp-for="ProductionDate" class="form-control bg-light text-dark" type="date" />
                    <span asp-validation-for="ProductionDate" class="text-danger"></span>
                </div>

                <input type="hidden" asp-for="FarmerId" />

                <button type="submit" class="btn btn-gold">💾 Save</button>
            </form>
        </div>
    </div>
</div>
