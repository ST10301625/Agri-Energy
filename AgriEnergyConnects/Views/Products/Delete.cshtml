@model AgriEnergyConnects.Models.Product

@{
    ViewData["Title"] = "Delete Product";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-danger text-white">
            <h3 class="mb-0">⚠️ Delete Product</h3>
        </div>
        <div class="card-body bg-white text-dark">
            <h5>Are you sure you want to delete this product?</h5>
            <hr />
            <dl class="row">
                <dt class="col-sm-4">Name</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Name)</dd>

                <dt class="col-sm-4">Category</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Category)</dd>

                <dt class="col-sm-4">Production Date</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.ProductionDate)</dd>

                <dt class="col-sm-4">Farmer Email</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Farmer.Email)</dd>
            </dl>

            <form asp-action="Delete" method="post" class="mt-4">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger me-2">🗑️ Delete</button>
                <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
            </form>
        </div>
    </div>
</div>
