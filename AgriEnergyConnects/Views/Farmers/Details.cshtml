@model AgriEnergyConnects.Models.Farmer

@{
    ViewData["Title"] = "Details";
}

<h1 class="text-dark">Farmer Details</h1>

<div class="card text-light bg-dark border-gold shadow-lg">
    <div class="card-header bg-dark border-bottom border-gold">
        <h4 class="mb-0">Profile Information</h4>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Full Name</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.FullName)</dd>

            <dt class="col-sm-3">Phone Number</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.PhoneNumber)</dd>

            <dt class="col-sm-3">Email</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Email)</dd>

            <dt class="col-sm-3">Location</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Location)</dd>

            <dt class="col-sm-3">User ID</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.UserId)</dd>
        </dl>
    </div>
</div>

<div class="mt-3">
    <a class="btn btn-outline-dark me-2" asp-action="Edit" asp-route-id="@Model?.Id">Edit</a>
    <a class="btn btn-outline-dark" asp-action="Index">Back to List</a>
</div>
