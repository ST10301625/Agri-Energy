@model AgriEnergyConnects.Models.Farmer

@{
    ViewData["Title"] = "Delete Farmer";
}

<div class="container mt-4">
    <div class="card border-danger shadow-sm">
        <div class="card-header bg-danger text-white">
            <h3 class="mb-0">❌ Confirm Delete</h3>
        </div>
        <div class="card-body">
            <h5 class="text-danger">Are you sure you want to delete this farmer?</h5>
            <hr />
            <dl class="row">
                <dt class="col-sm-3">Full Name</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.FullName)</dd>

                <dt class="col-sm-3">Phone Number</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.PhoneNumber)</dd>

                <dt class="col-sm-3">Email</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Email)</dd>

                <dt class="col-sm-3">Location</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Location)</dd>

                <dt class="col-sm-3">User ID</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.UserId)</dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger">🗑️ Delete</button>
                <a asp-action="Index" class="btn btn-secondary ms-2">⬅️ Back to List</a>
            </form>
        </div>
    </div>
</div>
